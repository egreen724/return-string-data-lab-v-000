<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td> <br>
    <td id="description-<%= product.id %>"><%= truncate(product.description) %></td>
    <button class="js-more" data-id="<%= product.id %>">More Info</button>
  </tr>
<% end %>

